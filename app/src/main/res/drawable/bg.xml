<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--
    shape的類型含有:
    1.rectangle - 長方形、矩形
    2.oval - 橢圓形、卵形
    3.line - 線
    4.ring - 環形
    -->

    <!-- 圓角，Layout佈局圓角幅度設定值 -->
    <corners android:radius="15dp" />
    <!--<corners android:radius="720dp" />-->

    <!-- 框內底部顏色 -->
    <solid android:color="@android:color/black" />

    <!-- 外框，框線粗細，框線顏色 -->
    <stroke
        android:width="1.0dip"
        android:color="#228B22" />

    <!-- 畫面顏色漸層，開始色碼與結束色碼進行漸層，角度為315度 -->
    <gradient
        android:angle="315"
        android:endColor="#D2D2FF"
        android:startColor="#3C14DC" />

    <!-- padding內縮距離 -->
    <padding
        android:bottom="5dip"
        android:left="3dip"
        android:right="3dip"
        android:top="5dip" />

    <!-- 尺寸大小 -->
    <size
        android:width="300dip"
        android:height="300dip" />

</shape>